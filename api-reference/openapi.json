{
  "openapi": "3.0.0",
  "info": {
    "title": "Service API Gateway",
    "version": "1.0.0",
    "description": "API documentation for Service API Gateway"
  },
  "servers": [
    {
      "url": "{{Api-Server}}"
    }
  ],
  "paths": {
    "/api/v1/image/segmentation/detect": {
      "post": {
        "summary": "Detect Segmentation",
        "parameters": [
          {
            "name": "format",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "json"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "example": "https://example.com/image.jpg"
                  },
                  "modelId": {
                    "type": "integer",
                    "example": 1
                  }
                },
                "required": ["url", "modelId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful segmentation detection"
          }
        }
      }
    },
    "/api/v1/segmentation/image/{id}/paint": {
      "get": {
        "summary": "Paint Image Segmentation",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "123123124124"
            }
          },
          {
            "name": "type",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "censor"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully painted the segmented image"
          }
        }
      }
    },
    "/api/v1/storage/upload": {
      "post": {
        "summary": "Upload Storage",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "files": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": ["files"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully uploaded file"
          }
        }
      }
    },
    "/api/v1/storage/get/{id}": {
      "get": {
        "summary": "Get Storage File",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "fe87136f-47a3-4427-85e0-330b2c359443192.jpg"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved file"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-KEY"
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ]
}
